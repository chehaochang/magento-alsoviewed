<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>yavva/alsoviewed/css/styles.css</name></action>
        </reference>
    </default>

    <catalog_product_view>
        <reference name="product.info.additional">
            <block type="alsoviewed/products" name="alsoviewed.content">
                <action method="setTemplate" ifconfig="alsoviewed/content/enabled">
                    <template>yavva/alsoviewed/products.phtml</template>
                </action>
                <action method="addDataFromConfig"><path>alsoviewed/content</path></action>
            </block>
        </reference>
        <reference name="left">
            <block type="alsoviewed/products" name="alsoviewed.left" before="-">
                <action method="setTemplate" ifconfig="alsoviewed/left/enabled">
                    <template>yavva/alsoviewed/products.phtml</template>
                </action>
                <action method="addDataFromConfig"><path>alsoviewed/left</path></action>
            </block>
        </reference>
        <reference name="right">
            <block type="alsoviewed/products" name="alsoviewed.right" before="-">
                <action method="setTemplate" ifconfig="alsoviewed/right/enabled">
                    <template>yavva/alsoviewed/products.phtml</template>
                </action>
                <action method="addDataFromConfig"><path>alsoviewed/right</path></action>
            </block>
        </reference>
    </catalog_product_view>
</layout>
